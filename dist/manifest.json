{
  "manifest_version": 3,
  "name": "Branch Name Generator",
  "version": "1.1.14",
  "description": "Generate Git branch name from task info",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Branch Name Generator Settings"
  },
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://timepoint-vsts.visualstudio.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dev.azure.com/*",
        "https://timepoint-vsts.visualstudio.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}